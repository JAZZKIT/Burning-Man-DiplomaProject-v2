@model BurnTest.ViewModels.RegisterViewModels
@{
    ViewData["Title"] = "SignUp";
}


@*Please don't hit me for the code, i was young;)*@
<div class="container">
    <main role="main" class="pb-6">
        <h1 style="text-align: center;">Sign Up</h1>
        <form class="formSigLog" method="post" asp-controller="Registration" asp-action="SignUp" style="text-align: center;max-width: 10000px;">
            <div class="wrapper">
                <div class="form">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="inputfield">
                        <label asp-for="Name"></label><br />
                        <input asp-for="Name" class="input" style="text-align: center;" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="inputfield">
                        <label asp-for="Email"></label><br />
                        <input asp-for="Email" class="input" style="text-align: center;" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="inputfield">
                        <label asp-for="Password"></label><br />
                        <input asp-for="Password" class="input" style="text-align: center;" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="inputfield">
                        <label asp-for="PasswordConfirm"></label><br />
                        <input asp-for="PasswordConfirm" class="input" style="text-align: center;" />
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <div class="inputfield">
                        <input type="submit" value="Register" class="btn amber darken-2">
                    </div>
                </div>
            </div>
        </form>
    </main>
</div>
